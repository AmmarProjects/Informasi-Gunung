<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AkunActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#fff">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/me"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Muhammad Ammarullah Ridho"
        android:id="@+id/namaDeveloper"
        android:textSize="20dp"
        android:textColor="@color/colorDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="muhammadammarullah14@gmail.com"
        android:id="@+id/emailDeveloper"
        android:textSize="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V i s i t  M y  W e b s i t e"
        android:layout_marginTop="24dp"
        android:textSize="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ammarprojects.com"
        android:layout_marginTop="6dp"
        android:onClick="visitMyWebsite"
        android:textSize="14dp"/>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/dicoding_logo"
        android:onClick="visitDicoding"/>

</LinearLayout>